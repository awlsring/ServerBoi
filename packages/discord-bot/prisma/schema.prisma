generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TrackServer {
  id       String @unique
  startedAt DateTime @default(now())
  endedAt DateTime? @updatedAt
  name      String
  application String 
  address   String
  ownerId String
  queryType String?
  queryAddress String?
  queryPort Int?
  channelId String?
}

model ServerCard {
  id       String      @id @default(uuid())
  addedAt DateTime @default(now())
  serverId String
  channelId String
  ownerId String
  admins String[]
  alertUsers String[]
  alertChannels String[]
}